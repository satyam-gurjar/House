<%- include('partials/head') %>
</head>



<body class="bg-gray-50 min-h-screen flex flex-col font-sans">


  <%- include('partials/nav') %>
  <!-- Main -->
  <main class="flex-grow max-w-7xl mx-auto px-6 py-12 w-full">

    <!-- Heading -->
    <div class="text-center mb-10">
      <h2 class="text-4xl font-bold text-gray-800 mb-2">
        Registered Homes
      </h2>
      <p class="text-gray-500">
        Discover homes hosted by our community
      </p>
    </div>

    <!-- Homes List -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% if (registeredHomes.length === 0) { %>
        <div class="col-span-full text-center text-gray-500 text-lg">
          No homes registered yet ğŸ¡  
          <br />
          Be the first host!
        </div>
      <% } %>

      <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-xl shadow hover:shadow-lg transition p-6">
          <div class="text-2xl mb-3">ğŸ </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">
            <%= home.houseName %>
          </h3>
          <p class="text-gray-500 text-sm">
            A beautiful place to stay with comfort and care.
          </p>
        </div>
      <% }) %>
    </div>

    <!-- CTA -->
    <div class="text-center mt-14">
      <a
        href="/host/add-home"
        class="inline-block bg-red-500 text-white font-semibold px-10 py-4 rounded-full
               hover:bg-red-600 active:scale-95 transition shadow-lg"
      >
        + Add Your Home
      </a>
    </div>

  </main>

  <!-- Footer -->
  <footer class="bg-white border-t text-center text-sm text-gray-500 py-6">
